<mujoco model="panda blocks world scene">
  <include file="base_panda.xml"/>

  <statistic center="0.3 0 0.4" extent="1"/>

  <option timestep="0.005" iterations="5" ls_iterations="8" integrator="implicitfast">
    <flag eulerdamp="disable"/>
  </option>

  <custom>
    <numeric data="12" name="max_contact_points"/>
  </custom>

  <visual>
    <headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0 0 0"/>
    <rgba haze="0.15 0.25 0.35 1"/>
    <global azimuth="120" elevation="-20"/>
    <scale contactwidth="0.075" contactheight="0.025" forcewidth="0.05" com="0.05" framewidth="0.01" framelength="0.2"/>
  </visual>

  <asset>
    <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="3072"/>
    <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3"
      markrgb="0.8 0.8 0.8" width="300" height="300"/>
    <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance="0.2"/>

    <!-- 10 distinct block materials cycling through colors -->
    <material name="block_mat_0" rgba="1.0 0.2 0.2 1"/>
    <material name="block_mat_1" rgba="0.2 1.0 0.2 1"/>
    <material name="block_mat_2" rgba="0.2 0.2 1.0 1"/>
    <material name="block_mat_3" rgba="1.0 1.0 0.2 1"/>
    <material name="block_mat_4" rgba="1.0 0.2 1.0 1"/>
    <material name="block_mat_5" rgba="0.2 1.0 1.0 1"/>
    <material name="block_mat_6" rgba="1.0 0.5 0.2 1"/>
    <material name="block_mat_7" rgba="0.5 0.2 1.0 1"/>
    <material name="block_mat_8" rgba="0.2 1.0 0.5 1"/>
    <material name="block_mat_9" rgba="1.0 0.8 0.4 1"/>
  </asset>

  <worldbody>
    <light pos="0 0 1.5" dir="0 0 -1" directional="true"/>
    
    <!-- Cameras for RGB-D capture -->
    <camera name="top_camera" pos="0.4 0.4 1.5" xyaxes="1 0 0 0 1 0" fovy="60"/>
    <camera name="side_camera" pos="1.6 0.55 0.8" euler="0 1.07 1.57" fovy="55"/>
    <camera name="front_camera" pos="0.4 -0.4 0.7" xyaxes="1 0 0 0 0.4 0.8" fovy="60"/>
    
    <geom name="floor" size="0 0 0.05" type="plane" material="groundplane" contype="1"/>

    <body name="target" pos="0.5 0 .5" quat="0 1 0 0" mocap="true"> 
      <geom type="box" size=".05 .05 .05" contype="0" conaffinity="0" rgba=".6 .3 .3 .2"/>
    </body>

    <body name="simple_table" pos="0 0.4 0" quat="0 0 0 1">
      <joint name="table_joint" type="free"/>

      <!-- tabletop -->
      <geom name="table_surface" type="box" size="0.8 0.4 0.02" pos="-0.4 -0.2 0.25"
            rgba="0.55 0.55 0.55 1"/>

      <!-- legs -->
      <geom type="box" size="0.015 0.015 0.12" pos=" 0.38  0.18 0.12"
            rgba="0.3 0.3 0.3 1"/>
      <geom type="box" size="0.015 0.015 0.12" pos="-1.18  0.18 0.12"
            rgba="0.3 0.3 0.3 1"/>
      <geom type="box" size="0.015 0.015 0.12" pos=" 0.38 -0.58 0.12"
            rgba="0.3 0.3 0.3 1"/>
      <geom type="box" size="0.015 0.015 0.12" pos="-1.18 -0.58 0.12"
            rgba="0.3 0.3 0.3 1"/>

      <!-- picking sites -->
      <site name="site_right" pos="-0.20 0 0.25" size="0.005"
            rgba="1 0 0 1"  type="sphere" euler="-1.57 1.57 0"/>
      <site name="site_left"  pos=" 0.20 0 0.25" size="0.005"
            rgba="0 1 0 1"  type="sphere" euler="-1.57 -1.57 0"/>
    </body>

    <!-- 6 small cubes (4cm x 4cm x 4cm) - blocks 0-5 -->
    <body name="block_0" pos="100 0 0.02">
      <joint name="block_0_freejoint" type="free"/>
      <inertial mass="0.064" pos="0 0 0" diaginertia="0.0001 0.0001 0.0001"/>
      <geom name="block_0_geom" type="box" size="0.02 0.02 0.02" material="block_mat_0" 
            solimp="0.99 0.99 0.01" solref="0.02 1"/>
    </body>
    
